<% if admin %>
  <section class="admin_bar masthead">
    <h1>all pages</h1>
    <%= link_to 'create page', new_page_path, class: 'btn primary' %>
  </section>
<% end %>

<% if @pages.each do |page| %>
<div class="page">
  <div class="page-content">
    <%= image_tag page.header, class: 'page-header' %>

    <h2><%= page.title %><span class="page-state"> <%= page.published? ? 'published' : 'unpublished' %></span></h2>
    <p><%= page.body %></p>

    <p class="page-admin">
      <%= link_to "view", page_path(page), class: 'btn small' %>
      <%= link_to "edit", edit_page_path(page), class: 'btn small' %>
      <%= link_to 'delete', page_path(page), method: :delete, class: 'btn small' %>
      <%= link_to 'preview', preview_page_path(page), target: '_blank', class: 'btn primary small' %>
    </p>
  </div>
</div>
<% end.empty? %>
  <section class="empty">
    <p>no saved pages&#133;</p>
  </section>
<% end %>
