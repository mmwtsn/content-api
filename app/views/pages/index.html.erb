<h1>pages#index</h1>

<%= link_to 'create page', new_page_path %>

<% @pages.each do |page| %>
  <p><%= page.title %></p>
  <p><%= page.body %></p>
  <p><%= page.published? ? 'published' : 'unpublished' %></p>
  <%= link_to "view", page_path(page) %>
  <%= link_to "edit", edit_page_path(page) %>
  <%= link_to 'delete', page_path(page), method: :delete %>
<% end %>
