<% content_for :sub_header do %>
  <h1>Solutions Pages</h1>
<% end %>

<%= link_to 'create page', new_page_path, class: 'btn secondary' %>

<div class="pages">
<% if @pages.each do |page| %>
  <section class="page card">
    <div class="card-container">
      <%= image_tag page.header, class: 'page-header' %>

      <h2><%= page.title %><span class="page-state"> <%= page.published? ? 'published' : 'unpublished' %></span></h2>
      <p><%= page.body %></p>
    </div>

    <div class="card-admin">
      <%= link_to "view", page_path(page) %>
      <%= link_to "edit", edit_page_path(page) %>
      <%= link_to 'delete', page_path(page) %>
      <%= link_to 'preview', preview_page_path(page), target: '_blank', class: 'preview' %>
    </div>
  </section>
<% end.empty? %>
  <div class="empty">
    <p>no saved pages&#133;</p>
  </div>
<% end %>
</div>
