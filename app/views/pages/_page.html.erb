<header class="collection-header">
  <%= link_to 'preview', preview_page_path(@page), target: '_blank', class: 'btn secondary' %>
</header>

<section class="solution card">
  <div class="card-name">
    <%= content_tag :p, @page.name %>
  </div>

  <div class="card-container">
    <%= image_tag @page.header, class: 'page-header' %>
    <%= content_tag :h2, @page.title, class: 'section-header' %>
    <%= content_tag :p, @page.body %>
  </div>

  <div class="card-admin">
    <%= link_to 'edit', edit_page_path(@page) %>
  </div>
</section>
