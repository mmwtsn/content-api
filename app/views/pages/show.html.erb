<section class="admin_bar">
  <h1>Solution</h1>
  <%= link_to 'preview', preview_page_path(@page), target: '_blank', class: 'btn secondary small' %>
  <%= link_to 'back', :back, class: 'btn small' %>
</section>

<section class="solution">
  <%= image_tag @page.header, class: 'page-header' %>

  <% if preview %>
    <%= render 'tmp_ibm_top' %>
  <% end %>

  <h2 class="section-header">
    <%= @page.title %>
  </h2>

  <% if preview %>
    <%= render 'tmp_ibm_mid' %>
  <% end %>

  <p>
    <%= @page.body %>
  </p>

  <% if admin %>
  <div class="admin">
    <%= link_to 'edit', edit_page_path(@page), class: 'btn small' %>
  </div>
  <% end %>
</section>

<% if preview %>
  <%= render 'tmp_ibm_bot' %>
<% end %>

<% if admin %>
  <section class="admin_bar admin_scenarios">
    <h1>Scenarios</h1>
    <%= link_to 'add scenario', new_page_scenario_path(@page), class: 'btn primary show_new_scenario submit_new_scenario' %>
  </section>

  <section class="all scenarios">

    <%= render 'scenarios/scenarios' %>

  </section>

  <section class="admin_bar admin_resources">
    <h1>Resources</h1>
    <%= link_to 'add resource', new_page_scenario_path(@page), class: 'btn primary show_new_resource' %>
  </section>

  <section class="all resources">

    <%= render 'resources/resources' %>

  </section>
<% end %>

<%= form_for([@page, @page.scenarios.build]) do |f| %>
  <%= f.label :quote %>
  <%= f.text_field :quote %>

  <%= f.label :pitch %>
  <%= f.text_field :pitch %>
<% end %>

<%= form_for([@page, @page.resources.build]) do |f| %>
  <%= f.label :body %>
  <%= f.text_field :body %>

  <%= f.label :url %>
  <%= f.text_field :url %>
<% end %>
