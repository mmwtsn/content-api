<%= form_for object, html: { multipart: true }, remote: true do |f| %>
  <div class="<%= container_class %>">
    <ul class="errors"></ul>

    <%= image_tag object.header, class: 'page-header' %>

    <%= f.label :name, 'Solution Name' %>
    <%= f.text_field :name, class: 'instance-name' %>

    <%= f.label :title, 'Leadspace Copy' %>
    <%= f.text_field :title %>

    <%= f.label :body, 'Body Copy' %>
    <%= f.text_area :body %>

    <%= f.label :header, 'Leadspace Image' %>
    <%= f.file_field :header %>
  </div>

  <% if new? %>
      <%= f.submit 'save', class: 'btn secondary', id: 'save-page', style: 'display: none' %>
  <% elsif edit? %>
    <div class="card-admin">
      <%= f.submit 'save', class: 'link plain', id: 'save-page' %>
    </div>
  <% end %>
<% end %>
