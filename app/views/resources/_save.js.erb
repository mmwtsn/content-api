<% if object.errors.any? %>
  <%= render 'errors', object: object %>
<% else %>
  $( '.resource.new' ).empty();

  var $empty = $( '.resources .empty' );

  if( $empty.length ) {
    $empty.remove();
  }

  $( '#new-resource' ).after('<%= j render("resource", resource: @resource) %>').show();
<% end %>
