<% if @page.resources.each do |resource| %>
<section class="resource card">
  <div class="card-container">
    <%= content_tag :p, resource.body %>
  </div>

  <div class="card-admin">
    <%= link_to 'edit', edit_resource_path(resource.id) %>
    <%= link_to 'delete', resource_path(resource.id), method: :delete, remote: true %>
  </div>
</section>
<% end.empty? %>
  <section class="empty">
    <p>no saved resources&#133;</p>
  </section>
<% end %>

<%= link_to 'new resource', '#', class: 'btn secondary new show_new_resource' %>
