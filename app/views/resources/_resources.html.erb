<header class="collection-header">
  <%= link_to 'new resource', '#', class: 'btn secondary show-new-resource', id: 'show_new_resource' %>
  <%= content_tag :h2, 'Resources', class: 'collection-type' %>
</header>

<% if @page.resources.each do |resource| %>
<section class="resource card">
  <div class="card-container">
    <%= content_tag :p, resource.body %>
  </div>

  <div class="card-admin">
    <%= link_to 'edit', edit_resource_path(resource.id) %>
    <%= link_to 'delete', resource_path(resource.id), method: :delete, remote: true, class: 'delete-resource' %>
  </div>
</section>
<% end.empty? %>
  <section class="empty">
    <p>no saved resources&#133;</p>
  </section>
<% end %>
