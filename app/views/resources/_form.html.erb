<%= form_for object, remote: true do |f| %>
  <div class="<%= container_class %>">
    <%= f.text_field :body %>
    <%= f.text_field :url %>
  </div>

  <% if new? %>
    <%= f.submit 'save', class: 'btn secondary', id: 'create_resource' %>
  <% elsif edit? %>
    <div class="card-admin">
      <%= f.submit 'save', class: 'link primary', id: 'save-scenario' %>
    </div>
  <% end %>
<% end %>
