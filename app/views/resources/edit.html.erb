<% content_for :sub_header do %>
  <h1>Edit Resource</h1>
  <%= link_to 'back', :back, class: 'btn small' %>
<% end %>

<%= form_for @resource do |f| %>
  <% if @resource.errors.any? %>
  <div class="errors">
    <p><%= pluralize(@resource.errors.count, 'error') %>:</p>
    <ul>
      <% @resource.errors.full_messages.each do |error| %>
        <li class="error"><%= error %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <%= f.label :body %>
  <%= f.text_field :body, autofocus: true %>

  <%= f.label :url %>
  <%= f.text_area :url %>

  <%= f.submit 'save', class: 'btn primary' %>
<% end %>
