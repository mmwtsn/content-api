<% if object.errors.any? %>
  <%= render 'errors', object: object %>
<% else %>
  $( '.scenario.new' ).empty();

  var $empty = $( '.scenarios .empty' );

  if( $empty.length ) {
    $empty.remove();
  }

  $( '#new_scenario' ).after( '<%= j render("index", object: @scenario) %>' ).show();
<% end %>
