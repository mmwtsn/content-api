<%= form_for [@page, @page.scenarios.build], html: { multipart: true } do |f| %>
  <%= f.label :quote %>
  <%= f.text_field :quote, autofocus: true %>

  <%= f.label :pitch %>
  <%= f.text_field :pitch %>

  <%= f.label :avatar %>
  <%= f.file_field :avatar %>

  <%= f.submit 'save', class: 'btn secondary', id: 'create_scenario' %>
<% end %>
