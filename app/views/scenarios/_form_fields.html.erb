<div class="<%= container_class %>">
  <ul class="errors"></ul>

  <%= f.label :name, 'Scenario Name' %>
  <%= f.text_field :name, class: 'instance-name' %>

  <%= f.label :quote %>
  <%= f.text_field :quote, autofocus: true %>

  <%= f.label :pitch %>
  <%= f.text_field :pitch %>

  <%= f.label :avatar %>
  <%= f.file_field :avatar %>
</div>

<% if new? %>
  <%= f.submit 'save', class: 'btn primary', id: 'save-scenario' %>
<% elsif edit? %>
  <div class="card-admin">
    <%= f.submit 'save', class: 'link primary', id: 'save-scenario' %>
  </div>
<% end %>
